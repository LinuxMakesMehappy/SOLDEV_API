{
  "name": "solana-error-api",
  "version": "1.0.0",
  "description": "Solana Error Code Explanation API - A serverless backend service that transforms cryptic Anchor error codes into human-readable explanations",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:safe": "node scripts/detect-hang.js test",
    "test:monitor": "node scripts/detect-hang.js monitor npm test",
    "build:safe": "node scripts/detect-hang.js build",
    "hang:report": "node scripts/detect-hang.js report",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "if exist dist rmdir /s /q dist",
    "prebuild": "npm run clean",
    "deploy": "npm run build && serverless deploy"
  },
  "keywords": [
    "solana",
    "anchor",
    "error-codes",
    "aws-lambda",
    "serverless",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.864.0",
    "@aws-sdk/client-cloudwatch": "^3.864.0",
    "@aws-sdk/client-dynamodb": "^3.864.0",
    "@aws-sdk/client-ssm": "^3.864.0",
    "@aws-sdk/lib-dynamodb": "^3.864.0",
    "aws-lambda": "^1.0.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "serverless": "^3.40.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
